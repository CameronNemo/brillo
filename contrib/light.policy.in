<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">
<policyconfig>
  <vendor>CameronNemo</vendor>
  <vendor_url>https://github.com/CameronNemo/light</vendor_url>
  <action id="org.freedesktop.policykit.pkexec.light">
  <description>Backlight and Keyboard LED control tool</description>
  <defaults>
    <allow_any>no</allow_any>
    <allow_inactive>no</allow_inactive>
    <allow_active>yes</allow_active>
  </defaults>
  <annotate key="org.freedesktop.policykit.exec.path">@bindir@/light</annotate>
  </action>
</policyconfig>
